# Half-page scroll
screen_down             <C-d>
screen_up               <C-u>

# Full-page scroll
next_page               J
previous_page           K

# Jumplist back/forward
noop                    <C-o>
prev_state              <C-o>
next_state              <C-i>

# Relocate embedded file open (was Ctrl+o)
open_document_embedded  <C-e>

# Fit page height
fit_to_page_height      a

# Fit width smart (zathura 's')
noop                    s
fit_to_page_width_smart s

# Relocate external search (was 's')
external_search         S

# Invert / dark mode
toggle_dark_mode        i

# Reload document
noop                    r
reload                  r

# Yank (copy selected text)
copy                    y

# TOC via Tab
noop                    <tab>
goto_toc                <tab>
